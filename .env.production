# Resume Parser - Production Configuration
# Copy this to .env and customize for your deployment

# ========== Flask Environment ==========
FLASK_ENV=production
FLASK_APP=app.py

# ========== Server Configuration ==========
PORT=5050
HOST=127.0.0.1
# For deployment behind reverse proxy (nginx/Apache):
# HOST=0.0.0.0
# Then configure reverse proxy to bind to specific IP

# ========== Security ==========
# Set this to enable admin endpoints (/admin/*)
ADMIN_TOKEN=your-secure-random-token-here

# Master key for encrypting API keys (if secrets_store.py is used)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_KEY=

# ========== File Upload Limits ==========
PARSE_MAX_UPLOADS=500
PARSE_MAX_FILE_MB=5

# ========== Processing Configuration ==========
PARSE_BATCH_SIZE=50
PARSE_WORKERS=4
PARSE_LLM_CONCURRENCY=2

# ========== Storage Configuration ==========
# Set to '1' to store original uploaded files
STORE_ORIGINALS=0

# ========== LLM Configuration ==========
# Confidence threshold for LLM results (0.0-1.0)
CONF_THRESHOLD=0.8

# ========== UI Configuration ==========
# Force a default theme: 'dark', 'light', or '' (allow toggle)
DEFAULT_THEME=

# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FILE=resume_parser.log
