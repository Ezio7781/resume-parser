# Production environment variables for deployment
# Copy this to .env for your deployment platform

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Security
ADMIN_TOKEN=change-this-admin-token-in-production
MASTER_KEY=change-this-master-key-in-production

# Upload Limits
PARSE_MAX_UPLOADS=100
PARSE_MAX_FILE_MB=10
STORE_ORIGINALS=1

# Rate Limiting (security)
RATE_LIMIT_PER_MINUTE=60

# CORS Settings (security)
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000

# LLM Integration (optional)
GROK_API_KEY=your-grok-api-key-here
CONF_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json